<?xml version="1.0" encoding="UTF-8" ?>   
    <!DOCTYPE mapper   
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
	<mapper namespace="com.wechat.model.Truck"> 
	
	<select id="selectTruck" parameterType="hashmap" resultType="Truck">
		SELECT 
			*
		FROM CP_TRUCK 
		where DRIVERTEL = #{tel }
	</select>

</mapper>